@model List<Role>

<div class="container">
    <div class="row-cols-md-1 pt-3 ob-4">
        <h1>Role Sayfasi</h1>
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>ID</td>
            <td>Role Adi</td>
            <td>Silme</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var role in Model)
        {
            <tr>
                <td>@role.RoleId</td>
                <td>@role.RoleName</td>
                <td><a asp-controller="Role" asp-action="Delete" asp-route-id="@role.RoleId" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="row pt-3 pb-2">
    <div>
        <a asp-controller="Role" asp-action="Add" class="btn btn-primary" type="button">Rol Olustur</a>
    </div>
</div>
